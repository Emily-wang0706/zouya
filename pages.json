{
	"easycom": {
		"^u-(.*)": "@/uview-ui/components/u-$1/u-$1.vue"
	},
	"pages": [{
			"path": "pages/index/index",
			"style": {
				"navigationStyle": "custom",
				"enablePullDownRefresh": true, //设置为true表示当前页面开启下拉刷新
				"backgroundTextStyle": "dark"
			}
		}, {
			"path": "pages/bawc/bawc",
			"style": {
				"navigationStyle": "custom"
			}
		}, {
			"path": "pages/plus/plus",
			"style": {}
		}, {
			"path": "pages/fm/fm",
			"style": {}
		}, {
			"path": "pages/center/center",
			"style": {}
		}, {
			"path": "pages/Graphic/Graphic",
			"style": {
				"navigationStyle": "custom", // 隐藏系统导航栏
				"navigationBarTextStyle": "black" // 状态栏字体为白色，只能为 white-白色，black-黑色 二选一
			}
		}, {
			"path": "pages/comment/comment",
			"style": {}
		},
		{
			"path": "pages/cityindex/cityindex",
			"style": {
				"navigationStyle": "custom", // 隐藏系统导航栏
				"navigationBarTextStyle": "white" // 状态栏字体为白色，只能为 white-白色，black-黑色 二选一
			}
		}
	    ,{
            "path" : "pages/signup/signup",
            "style" : {
				"navigationStyle": "custom"
			}
        }
    ],
	"globalStyle": {
		"navigationBarTextStyle": "black",
		"navigationBarTitleText": "Hello uniapp",
		"navigationBarBackgroundColor": "#fff",
		"backgroundColor": "#F8F8F8",
		"backgroundColorTop": "#F4F5F6",
		"backgroundColorBottom": "#F4F5F6",
		"mp-alipay": {
			"titleBarColor": "#FFFFFF"
		}
	},
	"tabBar": {
		"borderStyle": "black",
		"backgroundColor": "#fff",
		"color": "#9F9F9F",
		"selectedColor": "#FFC21F",
		"list": [{
				"pagePath": "pages/index/index",
				"iconPath": "static/img/index.png",
				"selectedIconPath": "static/img/selindex.png",
				"text": "首页"
			},
			{
				"pagePath": "pages/bawc/bawc",
				"iconPath": "static/img/free.png",
				"selectedIconPath": "static/img/free.png",
				"text": "霸王餐"
			},
			{
				"pagePath": "pages/plus/plus",
				"iconPath": "static/img/add1.png",
				"selectedIconPath": "static/img/add1.png",
				"text": ""
			},
			{
				"pagePath": "pages/fm/fm",
				"iconPath": "static/img/fm.png",
				"selectedIconPath": "static/img/selfm.png",
				"text": "走鸭FM"
			},
			{
				"pagePath": "pages/center/center",
				"iconPath": "static/img/center.png",
				"selectedIconPath": "static/img/selcenter.png",
				"text": "我的"
			}
		]
	}
}
